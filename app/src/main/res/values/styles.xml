<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textViewStyle">@style/retroTextView</item>
        <item name="android:buttonStyle">@style/retroButton</item>
    </style>

    <style name="retroButton" parent="android:Widget.Button">
        <item name="android:fontFamily">@font/joystick</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="retroTextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/joystick</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
